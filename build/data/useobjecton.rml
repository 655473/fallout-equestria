<rml>
  <head>
    <title>Iventory</title>
    <link type="text/template" href="tpl_mainbar.rml" />
    <style>
      #body
      {
        width:  520px;
        height: 70%;
        margin: auto;
        margin-top: 10px;
      }

      #body-inventory-items
      {
        width:          90%;
        height:         80%;
        margin-left:    10px;
        margin-right:   10px;
        margin-top:     10px;
        margin-bottom:  10px;
      }

      #inventory
      {
        drag:         clone;
        overflow-y:   scroll;
        margin-right: 10px;
        height:       90%;
      }         

      #button_cancel
      {
        position:       absolute;
        bottom:         5px;
        right:          5px;
      }
    </style>
  </head>
  <body id="body" template="tplmainbar">
  <p>
    <div id="inventory-items" class="console-bg">
      <div id="inventory">
      </div>
    </div>
    <button class="button_menu" id="button_cancel" i18n="Cancel">Cancel</button>
  </p>
  </body>
</rml>
